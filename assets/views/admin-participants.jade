extend layout
block content
  .page-header
    h1 All Participant Groups

  .well
    a.btn.btn-primary(href='/admin/participants/create').
      Add Participant Group
  table.table.participants
    thead
      tr
        th Group
        th Emails
    tbody
      each p in participants
        tr
          td
            a(href='/admin/participant/#{p._id}')= p.name
          td= p.emails.length


