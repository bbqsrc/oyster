extend layout
block content
  .page-header
    h1= __("Change Password")
  
  if error
    .alert.alert-danger= error
  if success
    .alert.alert-success= success
  
  form.form-horizontal(method='post')
    .form-group
      label.control-label.col-sm-2(for='curr-password')= __("Current password")
      .col-sm-10
        input.form-control(type='password' id='curr-password' name='currPassword')
    .form-group
      label.control-label.col-sm-2(for='password')= __("New password")
      .col-sm-10
        input.form-control(type='password' id='password' name='password')
    .form-group
      label.control-label.col-sm-2(for='password2')= __("New password again")
      .col-sm-10
        input.form-control(type='password' id='password2' name='password2')
    button.col-sm-offset-2.btn.btn-primary(type='submit')= __("Update")
