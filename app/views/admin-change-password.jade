extend layout
block content
  .page-header
    h1= translate("password.title")
  
  if error
    .alert.alert-danger= error
  if success
    .alert.alert-success= success
  
  form.form-horizontal(method='post')
    .form-group
      label.control-label.col-sm-2(for='curr-password')= translate("password.current")
      .col-sm-10
        input.form-control(type='password' id='curr-password' name='currPassword')
    .form-group
      label.control-label.col-sm-2(for='password')= translate("password.new")
      .col-sm-10
        input.form-control(type='password' id='password' name='password')
    .form-group
      label.control-label.col-sm-2(for='password2')= translate("password.again")
      .col-sm-10
        input.form-control(type='password' id='password2' name='password2')
    button.col-sm-offset-2.btn.btn-primary(type='submit')= translate("update")
