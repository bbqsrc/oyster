extend layout-noheader
block nav
  nav.navbar.navbar-default
    .container-fluid
      .navbar-header
        a(class="navbar-brand" href="/") Oyster
      .nav.navbar-form.navbar-right
        a(href="/admin", class='btn btn-link')
          | Admin 
block content
  .row
    .col-md-12
      .jumbotron(style='margin-top: 6em')
        .page-header
          h1= __("The server is up!")
        p
          = __("This is")
          strong  Oyster
          = __(", an open source voting system written by") 
          a(href='https://brendan.so')  Brendan Molloy
          | .
        p
          a(class='btn btn-primary btn-lg', href="https://bbqsrc.github.io/oyster")= __("Read more")
