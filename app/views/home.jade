extend layout-noheader
block nav
  nav.navbar.navbar-default
    .container-fluid
      .navbar-header
        a(class="navbar-brand" href="/") Oyster
      .nav.navbar-form.navbar-right
        a(href="/admin", class='btn btn-link')
          = translate("admin")
block content
  .row
    .col-md-12
      .jumbotron(style='margin-top: 6em')
        .page-header
          h1= translate("home.intro")
        p!= translate("home.description", { product: "<strong>Oyster</strong>", author: "<a href='http://brendan.so'>Brendan Molloy</a>" })
        p
          a(class='btn btn-primary btn-lg' href="https://bbqsrc.github.io/oyster")= translate("home.more")
