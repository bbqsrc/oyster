extend layout
block content
  .page-header
    h1= title

  form.col-sm-8.col-sm-offset-2#form(method="POST")
    h2= translate('poll.details')
    .form-group
      label.control-label(for='fld1')= translate('poll.name')
      input.form-control(placeholder='Best Election', type='text', name='title', id='fld1')
    .form-group
      label.control-label(for='fld2')= translate('poll.slug')
      input.form-control(placeholder='best-election', type='text', name='slug', id='fld2')
    .checkbox
      label
        input(type='checkbox', name='isPublic', checked)
        = translate("poll.makePublic")
      .help-block Public means the results will be accessible from the main page.

    h2= translate("poll.dateTime")
    .row
      .form-group.col-sm-6
        label.control-label(for='startDate')= translate('poll.startDate')
        .input-group
          input.form-control(placeholder='2014-12-31', type='date', name='startDate', id='startDate')
          span.input-group-btn
            button.btn.btn-primary.btn-start-date-today(type='button', style='width: 6em')= translate("poll.today")
      .form-group.col-sm-6
        label.control-label(for='startTime')= translate("poll.startTime")
        .input-group
          input.form-control(placeholder='23:59', type='time', name='startTime', id='startTime')
          span.input-group-btn
            button.btn.btn-primary.btn-start-time-now(type='button', style='width: 6em')= translate('poll.now')
    .row
      .form-group.col-sm-6
        label.control-label(for='endDate')= translate('poll.endDate')
        .input-group
          input.form-control(placeholder='2015-01-31', type='date', name='endDate', id='endDate')
          span.input-group-btn
            button.btn.btn-primary.btn-end-date-7days(type='button', style='width: 6em')= translate('poll.sevenDays')
      .form-group.col-sm-6
        label.control-label(for='endTime')= translate("poll.endTime")
        .input-group
          input.form-control(placeholder='23:59', type='time', name='endTime', id='endTime')
          span.input-group-btn
            button.btn.btn-primary.btn-end-time-6pm(type='button', style='width: 6em')= translate("poll.artonKlockan")
     .row
       .form-group.col-sm-6.col-sm-offset-6
         label.control-label(for='timezone')= translate("poll.timezone")
         input(type='hidden', name='timezone', id='timezone')
         .timezone-human
         .help-block= translate('poll.timezoneHelp')
    h2= translate('poll.content')
    .form-group
      label.control-label(for='poll-data')= translate('poll.data')
      textarea.form-control(name='pollData', id='poll-data', rows='8', style='display: none')
      pre#poll-data-editor(style='height: 300px').
        title = "Title on the page"
        info = """
        #### Comments!

        Here goes markdown explaining all the necessities
        """

        [[sections]]

        type = "motion"
        threshold = "two-thirds"
        title = "A Motions Section"
        info = """
        More info?
        """

        [[sections.fields]]

        id = "motion id"
        title = "Human readable title, whatever"
        body = """
        Here is the motion, humanoid.
        """

        [[sections]]

        type = "election"
        method = "schulze"
        title = "An Elections Section"
        info = """
        Explain how to vote or whatever.
        """

        [[sections.fields]]

        id = "Position up for election"
        candidates = ["Candidate A", "Candidate B"]

        [[sections.fields]]

        id = "Another position up for election 2"
        candidates = ["Candidate A", "Candidate B", "Candidate C"]
        winners = 2 # For multiple winner elections, where supported

      .help-block= translate('poll.toml')
    .form-group
      label.control-label(for='theme')= translate('poll.theme')
      select.form-control(name='theme' id='theme')
        for t in themes
          option(value=t)= t
    .form-group
      label.control-label(for='participant-groups')= translate('poll.participantGroups')
      select.form-control(multiple, placeholder='foo@bar.lol', name='participants', id='participant-groups', rows='8')
        for p in participants
          option(value=p.name)= p.name
    h3= translate('poll.email')
    .form-group
      label.control-label(for='fld-email1')= translate('poll.from')
      input.form-control(placeholder='Test Person (Organisation) <email@place.lol>', type='text', name='emailFrom', id='fld-email1')
    .form-group
      label.control-label(for='fld-email2')= translate('poll.subject')
      input.form-control(placeholder='Voting Token Inside!', type='text', name='emailSubject', id='fld-email2')
    .form-group
      label.control-label(for='fld-email3')= translate('poll.body')
      textarea.form-control(name='emailBody', id='fld-email3', rows='8').
        Dear person,

        Vote here: {url}

        Signed,
        Election Team
      .help-block Body must include the {url} token or people won't be able to access the voting page!

    button.btn.btn-success(type='submit')= translate('poll.create')

    hr

    script(src='/static/js/toml.min.js')
    script(src='/static/js/ace/ace.js')
    script.
      var editor = ace.edit('poll-data-editor');
      editor.setTheme('ace/theme/monokai');
      editor.getSession().setMode('ace/mode/toml');

      var dateVal = new Date().getTimezoneOffset() * 100 / -60;

      $("#timezone").val(dateVal);
      $('.timezone-human').text('UTC' + (dateVal >= 0 ? "+" : "-") + (dateVal / 100));

      $(".btn-start-date-today").on('click', function() {
          var date = new Date(),
              d = date.getDate(),
              m = date.getMonth() + 1,
              y = date.getFullYear();
              
          date = y + '-' + (m < 10 ? "0" : "") + m + "-" + (d < 10 ? "0" : "") + d;
          $("#startDate")[0].value = date;
      });

      $(".btn-start-time-now").on('click', function() {
          var time = new Date(),
              m = time.getMinutes(),
              h = time.getHours();
          time = (h < 10 ? "0" : "") + h + ":" + (m < 10 ? "0" : "") + m;
          $("#startTime")[0].value = time;
      });

      $(".btn-end-date-7days").on('click', function() {
          var date = new Date,
              d, m, y;
            
          date.setDate(date.getDate() + 7);
          
          d = date.getDate();
          m = date.getMonth() + 1;
          y = date.getFullYear();
          
          date = y + '-' + (m < 10 ? "0" : "") + m + "-" + (d < 10 ? "0" : "") + d;
          $("#endDate")[0].value = date;
      });

      $(".btn-end-time-6pm").on('click', function() {
          $("#endTime")[0].value = "18:00";
      });

      $("#form").on('submit', function(e) {
        var data;

        e.preventDefault();

        try {
          data = toml.parse(editor.getValue());
        } catch (err) {
          alert(err);
          return;
        }

        $("#poll-data").val(JSON.stringify(data));

        this.submit();
      });
