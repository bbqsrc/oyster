<div class='oyster-method-approval'>
  <div class='oyster-method-approval-state'>
    <div class='btn-group' data-toggle="buttons">
      <label class="btn btn-success btn-lg">
        &#x2713;
        <input hidden name="{{id}}" type='radio' value="1">
      </label>
      <label class="btn btn-danger btn-lg">
        &#x2717;
        <input hidden name="{{id}}" type='radio' value="0" checked>
      </label>
    </div>

    <span class='oyster-candidate-name'>
      {{name}}
    </span>

    {{#if info}}
    <blockquote class='oyster-candidate-info'>
      {{markdown info}}
    </blockquote>
    {{/if}}
  </div>
</div>
