<!doctype html>
<html lang='{{locale}}'>
  <head>
    <base target='_blank'>
    <meta charset='utf-8'>

    <title>{{title}}</title>

    <!--[if lt IE 10]>
    <script src="{{asset 'js/es5-shim.min.js'}}"></script>
    <script src="{{asset 'js/html5shiv.min.js'}}"></script>
    <![endif]-->

    <meta name='viewport' content='width=device-width, initial-scale=1.0'>

    <link href="{{asset 'css/bootstrap.min.css'}}" rel='stylesheet'>
    <link href="{{asset 'css/style.css'}}" rel="stylesheet">
  </head>
  <body>
    <main role='main' class='oyster-main' style='display: block'>
      <div class='container'>
        <header>
          {{> header}}
        </header>

        <hr>

        {{#if message}}
          <div class="alert alert-danger">
            {{message}}
          </div>
        {{/if}}

        {{#if ballot}}
          <div class="alert alert-info">
            <p>
              <strong>{{formatMessage (intlGet "submission.received")}}</strong>
              {{formatMessage (intlGet "ballot.thanks")}}
            </p>
            <p>
              {{formatMessage (intlGet "ballot.closeWindow")}}
            </p>
          </div>

          <hr>

          <div class='alert alert-info'>
            <p>
              <strong>{{formatMessage (intlGet "ballot.techUsers")}}</strong>
            </p>
            <p>
              {{formatMessage (intlGet "ballot.json")}}
            </p>

            <pre class='ballot'>{{json ballot}}</pre>
          </div>
        {{/if}}
      </div>
    </main>

    <footer class='powered-by-oyster'>
      {{{formatMessage (intlGet "poweredBy") product="<a rel='nofollow' href='https://bbqsrc.github.io/oyster'>Oyster</a>"}}}
    </footer>
  </body>
</html>
