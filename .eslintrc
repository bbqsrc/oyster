{
    "rules": {
        "indent": [
            2,
            2,
            {"VariableDeclarator": 2}
        ],
        "quotes": [2, "single", "avoid-escape"],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "strict": 0
    },
    "env": {
        "es6": true,
        "node": true
    },
    "parser": "babel-eslint",
    "extends": "eslint:recommended"
}
